<?xml version="1.0" encoding="UTF-8"?>
<cronentries>

  <cron>
    <url>/tasks/refreshblogs</url>
    <description>Refresh blog feeds</description>
    <schedule>every 20 minutes</schedule>
  </cron>
  
  
  <cron>
    <url>/tasks/refreshsubscriptions</url>
    <description>Refresh subscriptions</description>
    <schedule>every 8 minutes</schedule>
  </cron>
  
  <cron>
    <url>/tasks/purgeblogs</url>
    <description>Purge unused blogs and oldest entries</description>
    <schedule>every 12 hours</schedule>
  </cron>
  
  <cron>
    <url>/tasks/activeblogs</url>
    <description>Purge unused blogs and oldest entries</description>
    <schedule>every 5 minutes</schedule>
  </cron>
  
</cronentries>